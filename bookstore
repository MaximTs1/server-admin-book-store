server {
    listen 80;
    server_name 185.229.226.27; # Replace with your domain name or keep the IP address

    root /var/www/bookStore/build; # The root path of your static files
    index index.html; # Define the file to serve as an index

    location / {
        try_files $uri $uri/ =404; # This line will try to serve the requested file if it exists, or a directory, or return a 404 error if it doesn't
    }

    # Optionally, you can add a location block to handle serving 'favicon.ico' and 'robots.txt'
    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    # Optionally, to handle the 404 page, you might want to serve the index.html
    error_page 404 /index.html;

}

